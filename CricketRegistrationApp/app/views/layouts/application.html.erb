<!DOCTYPE html>
<html>
<head>
  <title>Tawa Cricket</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application',  'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,300' rel='stylesheet' type='text/css'>
    <!-- JQuery -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<!-- SHA3 CryptoJS Hash Function -->
	<script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha3.js"></script>


    <script type="text/javascript">
    
        $( document ).ready(function() {
            var pathname = window.location.pathname;
            var title_container = $('#title_container').height();
            
            if(pathname != "/"){
                $('html, body').stop().animate({
                        scrollTop: title_container + "px"
                }, 600); 
            }
            
           $(window).scroll(function(){
                if ($(window).scrollTop() >= title_container){
                    $("#menu").css("top", $(window).scrollTop() +"px");
                }
               else {
                    $("#menu").css("top", title_container+"px");
                }
           });
  
        });
        
        
        
    </script>
    
    
    
</head>
<body>

  
        <!--  Menu and header for all pages  -->
    
    <div id="background_image" style="background: url(<%= asset_path 'cricket.jpg' %>);"></div>
    
        <div id="title_container"><div id="title">  
            <p class="title">
                    <span class="title">TAWA</span><br>
                         _____<br><br>
                        cricket website
                    </p >
            </div>
        </div>
    
        <div id="colour_block"></div>
    
        <div id="menu" class="menu">
            <ul>
                <li class="home" onClick="self.location='../'">
                    <h3>Home</h3>
                </li>
                <li class="rego">
                    <h3>Register</h3>
                    
                <!-- Sub menu goes here -->
                <div id="sub_menu" class="menu">
                    
                        <ul class="registration">
                            <li id="junior" class="register" onClick="self.location='../parents/new'">
                                <h3>Junior</h3>
                            </li>
                                
                            <li id ="senior" class="register" onClick="self.location='../players/new'">
                                <h3>Senior</h3>
                            </li>    

                            <li id="volunteer" class="register" onClick="self.location='../coaches/new'">
                                <h3>Volunteer</h3>
                            </li>    
                                
                        </ul>
                        
                </div>       
                        
                </li>
                    <li class="admin" onClick="self.location='../admin/index'">
                        <h3>Admin</h3>
                    </li>
                </ul>
            </div>
   
        <div class="wrapper">

                <%= yield %>
            
        </div>


</body>
</html>
