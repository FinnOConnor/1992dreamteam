<%= form_for(@team) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :grade_id %>
    <%= f.number_field :grade_id %>
  </div>
  <div class="field">
    <%= f.label :coach_id %>
    <%= f.collection_select :coach_id, Coach.all, :id, :first_name, prompt: true %>
  </div>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>