<h1>Listing grades</h1>

<table>
  <thead>
    <tr>
      <th>Grade name</th>
      <th>Min size</th>
      <th>Max size</th>
      <th>Min age</th>
      <th>Max age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.grade_name %></td>
        <td><%= grade.min_size %></td>
        <td><%= grade.max_size %></td>
        <td><%= grade.min_age %></td>
        <td><%= grade.max_age %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

