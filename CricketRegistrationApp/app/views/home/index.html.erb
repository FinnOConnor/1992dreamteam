<head>
    
    <!-- Automatically sets the height of all the iframes -->
    <script>
        function resizeIframe(obj) {
                obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
        }

    </script>
    

    
    <script>
        $(document).ready(function() {      
                      
            var height = $(window).height();
            var home_height = $('#home_container').height() + 70;
            var selectedPage = null;

			var transitionSpeed = 400;

            /* Loads Registration page */
            $('.register').click(function(e) {
                slideOn(this);   
            });

            function slideOn(page){
                /* Send the home page off */
                $("#home_container").animate({right: "200%"}, transitionSpeed);

                if($(page).attr("id") == "junior"){
                    $("#junior_container").animate({right: 0}, transitionSpeed);
                }
                if($(page).attr("id") == "senior"){
                    $("#senior_container").animate({right: 0}, transitionSpeed);
                }
                if($(page).attr("id") == "volunteer"){
                    $("#volunteer_container").animate({right: 0}, transitionSpeed);
                    
                }   
                slideOff(page);
                
            }
            
            function slideOff(page){
                switch($(page).attr("id")){
                        case "junior" : $("#senior_container").animate({right: "200%"}, transitionSpeed);
                                        $("#volunteer_container").animate({right: "200%"}, transitionSpeed); break;
                        case "senior" : $("#junior_container").animate({right: "200%"}, transitionSpeed);
                                        $("#volunteer_container").animate({right: "200%"}, transitionSpeed);break;
                        case "volunteer" : $("#senior_container").animate({right: "200%"}, transitionSpeed);
                                        $("#junior_container").animate({right: "200%"}, transitionSpeed);
                };
            }
            
            
            /* Loads Home page */
            $('.home').click(function(e) {
                $("#home_container").animate({right: "0"}, transitionSpeed);
                $("#senior_container").animate({right: "200%"}, transitionSpeed);
                $("#junior_container").animate({right: "200%"}, transitionSpeed);  
                $("#volunteer_container").animate({right: "200%"}, transitionSpeed);             
                
            });
            
            
            var inAdmin = false;
            
            $('.admin').click(function(){  
                if(inAdmin){
                    $("#menu").animate({width: "100%", left: '0px'}, transitionSpeed, function(){
                            $("#menu").animate({top: "40%"}, transitionSpeed);
                            $("#home_container").animate({right: 0}, transitionSpeed);  
                            $("#title").animate({right: 0}, transitionSpeed);      
                            $("#colour_block").animate({right: 0}, transitionSpeed);    
                            $("#title_container").animate({right: 0}, transitionSpeed);                    
                            $("#background_image").animate({right: 0}, transitionSpeed);                                                        });                    

                    inAdmin = false;
                }
                    
                else{
                    $("#home_container").animate({right: "200%"}, transitionSpeed);
                    $("#senior_container").animate({right: "200%"}, transitionSpeed);
                    $("#junior_container").animate({right: "200%"}, transitionSpeed);  
                    $("#volunteer_container").animate({right: "200%"}, transitionSpeed);       
                    $("#title").animate({right: "200%"}, transitionSpeed);      
                    $("#colour_block").animate({right: "200%"}, transitionSpeed);    
                    $("#title_container").animate({right: "200%"}, transitionSpeed);                    
                    $("#background_image").animate({right: "200%"}, transitionSpeed); 
                    $("#menu").animate({width: "1050px", left: '-700px'}, transitionSpeed, function(){
                            $("#menu").animate({top: "0px"}, transitionSpeed);
                    });

                    inAdmin = true;
                }
            });     
            
			
        });
    </script>

</head>

