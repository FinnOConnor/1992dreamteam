            function slideOn(page){
                /* Send the home page off */
                $("#home_container").animate({left: "-200%"}, transitionSpeed);
                $(".iframe").css({height: 0});
                if($(page).attr("id") == "junior"){
                    $("#junior_container").animate({left: "50%", marginLeft: "-450px"}, transitionSpeed);
                    $("#juniorIframe").animate({height: resizeIframe(document.getElementById("juniorIframe")) +"px"}, transitionSpeed);
                }
                else if($(page).attr("id") == "senior"){
                    $("#senior_container").animate({left: "50%", marginLeft: "-450px"}, transitionSpeed);
                    $("#seniorIframe").animate({height: resizeIframe(document.getElementById("seniorIframe")) +"px"}, transitionSpeed);
                }
                else if($(page).attr("id") == "volunteer"){
                    $("#volunteer_container").animate({left: "50%", marginLeft: "-450px"}, transitionSpeed);
                    $(".iframe").css({height: 0});
                    $("#volunteerIframe").animate({height: resizeIframe(document.getElementById("volunteerIframe")) +"px"}, transitionSpeed);              
                }      
                
                else if($(page).attr("class") == "admin"){
                    $("#admin_container").animate({left: "50%", marginLeft: "-450px"}, transitionSpeed);
                    $(".iframe").css({height: 0});
                    $(".adminIframe").animate({height: resizeIframe(document.getElementById("adminIframe")) +"px"}, transitionSpeed);              
                }                  
     
                slideOff(page);
                
            }
            
            function slideOff(page){
                switch($(page).attr("id")){
                        case "junior" : $("#senior_container").animate({left: "-200%"}, transitionSpeed);
                                        $("#volunteer_container").animate({left: "-200%"}, transitionSpeed); break;
                        case "senior" : $("#junior_container").animate({left: "-200%"}, transitionSpeed);
                                        $("#volunteer_container").animate({left: "-200%"}, transitionSpeed);break;
                        case "volunteer" : $("#senior_container").animate({left: "-200%"}, transitionSpeed);
                                        $("#junior_container").animate({left: "-200%"}, transitionSpeed);
              
                };
            }
            
            
            /* Loads Home page */
            $('.home').click(function(e) {
                $("#home_container").animate({left: "50%"}, transitionSpeed);
                $("#senior_container").animate({left: "-200%"}, transitionSpeed);
                $("#junior_container").animate({left: "-200%"}, transitionSpeed);  
                $("#volunteer_container").animate({left: "-200%"}, transitionSpeed);             
                $(".iframe").css({height: 0});
            });
            
            
            var inAdmin = false;
            
            
